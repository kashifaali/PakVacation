<% layout('/layout/boilerplate.ejs') %>

<body class="bg-gray-100">
    <!-- Add New Button -->
    <form action="/addnew" method="get" class="m-6">
        <button class="bg-blue-500 text-white font-semibold py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-200 shadow-lg">
            Add New
        </button>
    </form>

    <!-- Card Grid -->
    <div class="bg-white mx-4 p-4 rounded-lg shadow-lg grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
        <% for(data of data) {%>
        <div class="bg-gray-50 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition duration-200">
            <a href="/shows/<%= data.id %>" class="block">
                <!-- Image -->
                <img src="<%= data.image.url %>" alt="Listing Image" class="w-full h-52 object-cover">
                <!-- Card Content -->
                <div class="p-4">
                    <h3 class="text-lg font-semibold text-gray-800"><%= data.title %></h3>
                    <p class="text-gray-600 font-medium mt-2">
                        <%= data.price %>
                        <span class="text-gray-900 font-bold text-lg ml-1">&#8360;</span>
                    </p>
                    <p class="text-gray-500 text-sm mt-1"><%= data.country %></p>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</body>

