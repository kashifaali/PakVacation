<% layout('/layout/boilerplate.ejs') %>
<body class="bg-gray-100 ">
    <div class="bg-white rounded-lg shadow-lg w-11/12 max-w-lg p-6 box-border m-auto mt-6 mb-5">
        <h1 class="text-center text-2xl font-bold text-gray-800 mb-5 border-b-2 border-gray-200 pb-2">Listing Details</h1>
        <div class="text-gray-600 leading-relaxed text-sm">
            <p><span class="font-bold text-blue-600">Title:</span> <%= showdata.title %></p>
            <p><span class="font-bold text-blue-600">Description:</span> <%= showdata.description %></p>
            <p><span class="font-bold text-blue-600">Price:</span> $<%= showdata.price %></p>
            <p><span class="font-bold text-blue-600">Location:</span> <%= showdata.location %></p>
            <p><span class="font-bold text-blue-600">Country:</span> <%= showdata.country %></p>
            <div class="mt-4 ">
                <span class="font-bold text-blue-600">Image:</span>
                <img src="<%= showdata.image.url %>" alt="Listing Image" class="w-full h-72  rounded-lg mt-2">
            </div>
        </div>
        <div class="flex justify-center gap-3 mt-6">
            <a 
                href="/update/<%= showdata._id %>" 
                class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition"
            >
                Edit
            </a>
            <form 
                method="post" 
                action="/delete/<%= showdata.id %>?_method=DELETE" 
                class="m-0"
            >
                <button 
                    type="submit" 
                    class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition"
                >
                    Delete
                </button>
            </form>
        </div>
    </div>
</body>

